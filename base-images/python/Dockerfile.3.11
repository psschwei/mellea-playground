# Mellea Python 3.11 Base Image
# Provides common runtime environment for Python services

FROM python:3.11-slim-bookworm

LABEL maintainer="mellea-team"
LABEL version="3.11"
LABEL description="Mellea Python 3.11 base image with common dependencies"

WORKDIR /app

# Create non-root user for security
RUN groupadd -r mellea && useradd -r -g mellea mellea

# Install common runtime dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    curl \
    git \
    && rm -rf /var/lib/apt/lists/* \
    && apt-get clean

# Create standard directories
RUN mkdir -p /app/data /app/src /app/logs \
    && chown -R mellea:mellea /app

# Common Python environment settings
ENV PYTHONPATH=/app/src \
    PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PIP_NO_CACHE_DIR=1 \
    PIP_DISABLE_PIP_VERSION_CHECK=1

# Default to non-root user
USER mellea

# Default working directory
WORKDIR /app
